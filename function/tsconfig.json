{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "ES6",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
